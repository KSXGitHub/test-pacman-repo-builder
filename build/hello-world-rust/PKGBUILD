pkgname='hello-world-rust'
pkgver='0.0.0'
pkgrel='1'
arch=('x86_64')
makedepends=(
  'rust'
  'gcc'
  'llvm'
)
source=(
  'Cargo.toml'
  'main.rs'
)
sha512sums=(
  'SKIP'
  'SKIP'
)

build() {
  cargo build --release
}

package() {
  install -Dm755 target/release/hello-world-rust "$pkgdir/usr/bin/hello-world-rust"
}
