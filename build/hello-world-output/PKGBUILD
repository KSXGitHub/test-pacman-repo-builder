pkgname='hello-world-output'
pkgver='0.0.0'
pkgrel='1'
arch=('any')
makedepends=(
  'hello-world-c'
  'hello-world-rust'
)
depends=(
  'coreutils'
)

package() {
  hello-world-c >hello-world-c.txt
  hello-world-rust >hello-world-rust.txt
  cat hello-world-*.txt
  install -Dm755 hello-world-c.txt "$pkgdir/usr/share/doc/hello-world-output/hello-world-c.txt"
  install -Dm755 hello-world-rust.txt "$pkgdir/usr/share/doc/hello-world-output/hello-world-rust.txt"
}
